<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.simplewebapp.model">

    <class name="Video" table="videos">

        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator class="identity"/>
        </id>

        <property name="videoId" type="java.lang.String">
            <column name="video_id"/>
        </property>

        <property name="title" type="java.lang.String">
            <column name="title" length="45" not-null="true"/>
        </property>

        <property name="views" type="java.lang.String">
            <column name="views" length="45" not-null="true"/>
        </property>

        <property name="likes" type="java.lang.String">
            <column name="likes" length="45" not-null="true"/>
        </property>

        <property name="dislikes" type="java.lang.String">
            <column name="dislikes" length="45" not-null="true"/>
        </property>

        <property name="channel" type="java.lang.String">
            <column name="channel" length="45" not-null="true"/>
        </property>

    </class>
</hibernate-mapping>
